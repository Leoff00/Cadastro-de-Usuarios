<img src="/public/img/img1.jpg">
<div class="card mt-3">
    <div class="card-body">
        <form action="/admin/postagens/nova" method="POST">
            <div class="form-row mt-4">
                <div class="col">
                    <input type="text" name="nome" class="form-control" placeholder="Nome..." required>
                </div>
                <div class="col">
                    <input type="text" name="sobrenome" class="form-control" placeholder="Sobrenome..." required>
                </div>
            </div>
            <div class="form-group">
                <label for="textArea" class="mt-4">Diga-me sua opini√£o: </label>
                <textarea class="form-control" name="feedback" rows="3"></textarea>
            </div>
            <label for="categoria">Cadastro: </label>
            <select name="categoria" class="custom-select">
                {{#each categorias}}
                <option value="{{_id}}">{{nome}} {{sobrenome}}</option>
                {{else}}
                <option value="0">Nenhum cadastro registrado</option>
                {{/each}}
            </select>
            <button class="btn btn-success mt-3" type="submit">Cadastrar</button>
        </form>
    </div>